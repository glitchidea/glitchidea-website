<!-- Contact Section -->
<section id="contact" class="section">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">İletişim</h2>
        
        <div class="contact-container">
            <!-- Contact Info Card - Left Side -->
            <div class="contact-info-card contact-animated" data-aos="fade-right" data-aos-delay="100">
                <div class="contact-info-header">
                    <h3>İletişim Bilgileri</h3>
                    <p>Hızlı erişim için</p>
                </div>
                
                <div class="contact-items">
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Email</h4>
                            <p id="contact-email">info@glitchidea.com</p>
                        </div>
                    </div>
                    
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Konum</h4>
                            <p>Remote / Türkiye</p>
                        </div>
                    </div>
                    
                </div>
                
                <div class="contact-social">
                    <h4>Sosyal Medya</h4>
                    <div class="social-links" id="contact-social-links">
                        <!-- Social links will be loaded dynamically -->
                    </div>
                </div>
            </div>
            
            <!-- Contact Form Card - Right Side -->
            <div class="contact-cta-card contact-form-side" data-aos="fade-left" data-aos-delay="200">
                <div class="cta-content">
                    <h3>İletişim Formu</h3>
                    <p>Mesajınızı gönderin</p>
                    
                    <form id="contactForm" class="contact-form">
                        <div class="form-group">
                            <label for="subject">Konu *</label>
                            <input type="text" id="subject" name="subject" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Mesaj *</label>
                            <textarea id="message" name="message" rows="5" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="senderEmail">E-posta Adresiniz *</label>
                            <input type="email" id="senderEmail" name="senderEmail" placeholder="ornek@email.com" required>
                        </div>
                        
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" id="sendForm">
                                <i class="fas fa-paper-plane"></i>
                                <span>Gönder</span>
                            </button>
                        </div>
                    </form>
                    
                    <div class="form-status" id="form-status"></div>
                </div>
            </div>
        </div>
    </div>
</section>
