<!-- Contact Section -->
<section id="contact" class="section">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">İletişim</h2>
        
        <div class="contact-container">
            <!-- Contact Info Card - Left Side -->
            <div class="contact-info-card contact-animated" data-aos="fade-right" data-aos-delay="100">
                <div class="contact-info-header">
                    <h3>İletişim Bilgileri</h3>
                    <p>Hızlı erişim için</p>
                </div>
                
                <div class="contact-items">
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Email</h4>
                            <p id="contact-email">info@glitchidea.com</p>
                        </div>
                    </div>
                    
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Konum</h4>
                            <p>Remote / Türkiye</p>
                        </div>
                    </div>
                    
                </div>
                
                <div class="contact-social">
                    <h4>Sosyal Medya</h4>
                    <div class="social-links" id="contact-social-links">
                        <!-- Social links will be loaded dynamically -->
                    </div>
                </div>
            </div>
            
            <!-- Email Form Card - Right Side -->
            <div class="contact-cta-card contact-form-side" data-aos="fade-left" data-aos-delay="200">
                <div class="cta-content">
                    <h3>📧 İletişim Formu</h3>
                    <p>Hızlı iletişim için email gönderin</p>
                    
                    <form id="emailForm" class="email-form">
                        <div class="form-group">
                            <label for="subject">Konu:</label>
                            <input type="text" id="subject" name="subject" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Mesaj:</label>
                            <textarea id="message" name="message" rows="8" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="senderEmail">Gönderen Email:</label>
                            <input type="email" id="senderEmail" name="senderEmail" placeholder="ornek@email.com" required>
                        </div>
                        
                        <button type="submit" id="sendBtn">
                            <span class="btn-text">📤 Mesaj Gönder</span>
                            <span class="btn-loading" style="display: none;">⏳ Gönderiliyor...</span>
                        </button>
                    </form>
                    
                    <div id="status" class="status-message"></div>
                    
                    <div class="info-box">
                        <h3>📋 Node.js Email Backend</h3>
                        <p><strong>Backend:</strong> Node.js + Express</p>
                        <p><strong>SMTP:</strong> Gmail SMTP (Nodemailer)</p>
                        <p><strong>📤 Gönderen:</strong> Kullanıcının email adresi</p>
                        <p><strong>📥 Alıcı:</strong> info@glitchidea.com</p>
                        <hr style="margin: 15px 0; border: none; border-top: 1px solid #ddd;">
                        <p><strong>💡 Nasıl Çalışır:</strong></p>
                        <p>1. Form doldurup "Mesaj Gönder" butonuna tıklayın</p>
                        <p>2. Node.js backend Gmail SMTP ile email gönderir</p>
                        <p>3. Email doğrudan info@glitchidea.com adresine ulaşır</p>
                        <p>4. Gönderen email adresini kendiniz yazarsınız</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
