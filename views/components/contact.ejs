<!-- Contact Section -->
<section id="contact" class="section">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">İletişim</h2>
        
        <div class="contact-container">
            <!-- Contact Info Card - Left Side -->
            <div class="contact-info-card contact-animated" data-aos="fade-right" data-aos-delay="100">
                <div class="contact-info-header">
                    <h3>İletişim Bilgileri</h3>
                    <p>Hızlı erişim için</p>
                </div>
                
                <div class="contact-items">
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Email</h4>
                            <p id="contact-email">info@glitchidea.com</p>
                        </div>
                    </div>
                    
                    <div class="contact-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Konum</h4>
                            <p>Remote / Türkiye</p>
                        </div>
                    </div>
                    
                </div>
                
                <div class="contact-social">
                    <h4>Sosyal Medya</h4>
                    <div class="social-links" id="contact-social-links">
                        <!-- Social links will be loaded dynamically -->
                    </div>
                </div>
            </div>
            
            <!-- Contact Methods Card - Right Side -->
            <div class="contact-cta-card contact-form-side" data-aos="fade-left" data-aos-delay="200">
                <div class="cta-content">
                    <h3>Hızlı İletişim</h3>
                    <p>Benimle iletişime geçmek için</p>
                    
                    <div class="contact-methods">
                        <a href="mailto:info@glitchidea.com" class="contact-email-btn">
                            <i class="fas fa-envelope"></i>
                            <span>E-posta Gönder</span>
                        </a>
                        
                        <div class="social-contact-links">
                            <a href="https://linkedin.com/in/yourprofile" target="_blank" class="social-contact-btn">
                                <i class="fab fa-linkedin"></i>
                                <span>LinkedIn</span>
                            </a>
                            <a href="https://github.com/yourusername" target="_blank" class="social-contact-btn">
                                <i class="fab fa-github"></i>
                                <span>GitHub</span>
                            </a>
                            <a href="https://twitter.com/yourusername" target="_blank" class="social-contact-btn">
                                <i class="fab fa-twitter"></i>
                                <span>Twitter</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</section>
